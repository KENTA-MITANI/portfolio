<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">項目追加</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group field">
            <%= form_with model: @item, method: :post, local: true do |f| %>
              <%= f.label :item_name,"項目名" %>
              <%= f.text_field :item_name, class: "form-control" %>

              <%= f.select :item_status, Item.item_statuses.keys, {}, {class: 'item'} %>
          </div> 
        </div>
        <div class="modal-footer">
          <%= f.submit "登録", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>